@model SitioUnoCRUD.Models.Department

@{
    ViewBag.Title = "Details";
}

<h2>Detalles del departamento</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            Area: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.area)
        </dd>

    </dl>
</div>

<table class="table">
    <tr>
        <th>
            Trabajadores
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.trabajadores)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.ActionLink(" Eliminar ", "DeleteWorkerFromApartment", new  { id = item._id  })
            </td>
        </tr>
    }


    <p>
        @Html.ActionLink("Volver", "Index")
    </p>

 
